<%# views/findNew.ejs %>

<% extend('template') %>
<link rel="stylesheet" type="text/css" href="/css/findNew.css"></link>
<style>
body{
    overflow-y: scroll;
    margin-left: 15px;
}
</style>
<% if (results.length > 0) { %>
            <div class="row">
                <div class="col-md-12">
        <% for(var i=0; i<results.length; i++) {%>
                    <div class="thumbnail container" style="max-width: 20%; border-radius: 10px; padding: 10px; float: left;">
                        <div class="container" id="content">
                            <img src=<%= 'https://graph.facebook.com/' + results[i].facebook.id + '/picture?type=large'%> id="profilePic" style="margin:auto;">
                            <div class="caption " style="text-align: center; width: 20%; ">
                                <h3><%= results[i].name %></h3>
                                <p><strong>About: </strong><%=  results[i].bio %><br><strong>From: </strong><%= results[i].location%><br><strong>Age: </strong><%= results[i].age %><br><strong>Knows: </strong><%= results[i].knownLangs %> <br> <strong>Looking to learn: </strong> <%= results[i].interestLangs %></p>
                            </div>
                        </div>
                    </div>
        <% } %>
                </div>
            </div>
<% } else { %>
    <h1 style="text-align: center;">Sorry! No one is available :(</h1>
<% } %>
